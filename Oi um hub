-- Serviços
local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local player = Players.LocalPlayer

-- GUI Principal
local ScreenGui = Instance.new("ScreenGui", game.Players.LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "GardenScriptHub"

local OpenButton = Instance.new("TextButton", ScreenGui)
OpenButton.Text = "ABRIR HUB"
OpenButton.Size = UDim2.new(0, 100, 0, 30)
OpenButton.Position = UDim2.new(0, 10, 0, 10)
OpenButton.BackgroundColor3 = Color3.fromRGB(60, 200, 100)
OpenButton.TextColor3 = Color3.new(1,1,1)

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.Size = UDim2.new(0, 400, 0, 300)
MainFrame.Position = UDim2.new(0.5, -200, 0.5, -150)
MainFrame.BackgroundColor3 = Color3.fromRGB(30,30,30)
MainFrame.Visible = false

local CloseButton = Instance.new("TextButton", MainFrame)
CloseButton.Text = "X"
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -35, 0, 5)
CloseButton.BackgroundColor3 = Color3.fromRGB(200, 50, 50)

-- Abrir/Fechar
OpenButton.MouseButton1Click:Connect(function()
	MainFrame.Visible = true
end)
CloseButton.MouseButton1Click:Connect(function()
	MainFrame.Visible = false
end)

-- Input de Pet
local PetInput = Instance.new("TextBox", MainFrame)
PetInput.PlaceholderText = "Digite o nome do PET (ex: RED FOX)"
PetInput.Position = UDim2.new(0, 20, 0, 60)
PetInput.Size = UDim2.new(0, 360, 0, 30)
PetInput.BackgroundColor3 = Color3.fromRGB(50,50,50)
PetInput.TextColor3 = Color3.new(1,1,1)

local NomeInput = Instance.new("TextBox", MainFrame)
NomeInput.PlaceholderText = "Digite o nome do Pet (ex: Bella)"
NomeInput.Position = UDim2.new(0, 20, 0, 100)
NomeInput.Size = UDim2.new(0, 360, 0, 30)
NomeInput.BackgroundColor3 = Color3.fromRGB(50,50,50)
NomeInput.TextColor3 = Color3.new(1,1,1)

-- Botão para pegar pet
local PetButton = Instance.new("TextButton", MainFrame)
PetButton.Text = "PEGAR PET"
PetButton.Position = UDim2.new(0, 20, 0, 140)
PetButton.Size = UDim2.new(0, 360, 0, 40)
PetButton.BackgroundColor3 = Color3.fromRGB(80, 140, 255)
PetButton.TextColor3 = Color3.new(1,1,1)

-- Lista de pets e nomes válidos (você pode ajustar se precisar)
local petsValidos = {
	["DRAGONFLY"]=true, ["RED FOX"]=true, ["PIG"]=true, ["GIANT ANT"]=true,
	["SNAIL"]=true, ["CHICKEN ZOMBIE"]=true, ["NIGHT OWL"]=true,
	["BLOOD OWL"]=true, ["RACCOON"]=true
