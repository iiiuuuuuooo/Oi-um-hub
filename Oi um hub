-- Cria uma GUI simples para exibir mensagens do console
local ScreenGui = Instance.new("ScreenGui", game.CoreGui)
local TextBox = Instance.new("TextBox", ScreenGui)

TextBox.Size = UDim2.new(0.5, 0, 0.4, 0)
TextBox.Position = UDim2.new(0.25, 0, 0.05, 0)
TextBox.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
TextBox.TextColor3 = Color3.new(0, 1, 0)
TextBox.ClearTextOnFocus = false
TextBox.TextXAlignment = Enum.TextXAlignment.Left
TextBox.TextYAlignment = Enum.TextYAlignment.Top
TextBox.Font = Enum.Font.Code
TextBox.TextSize = 14
TextBox.MultiLine = true
TextBox.TextWrapped = false
TextBox.Text = "[Console Captura Inicializado]\n"

-- Redireciona `print`, `warn` e `error`
local originalPrint = print
local originalWarn = warn
local originalError = error

function addToConsole(msg, tag)
	TextBox.Text = TextBox.Text .. string.format("[%s] %s\n", tag, tostring(msg))
end

_G.print = function(...)
	local msg = table.concat({...}, " ")
	addToConsole(msg, "INFO")
	originalPrint(msg)
end

_G.warn = function(...)
	local msg = table.concat({...}, " ")
	addToConsole(msg, "WARN")
	originalWarn(msg)
end

_G.error = function(...)
	local msg = table.concat({...}, " ")
	addToConsole(msg, "ERROR")
	originalError(msg)
end

print("Captura de print iniciada")
warn("Aviso de teste")
-- error("Erro de teste") -- descomente para testar
