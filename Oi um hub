-- Interface Gráfica
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local Title = Instance.new("TextLabel")
local KillAuraButton = Instance.new("TextButton")
local AutoFarmButton = Instance.new("TextButton")
local AutoWinButton = Instance.new("TextButton")
local TeleportButton = Instance.new("TextButton")
local FlyButton = Instance.new("TextButton")
local ESPButton = Instance.new("TextButton")

ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "DeadRailsHub"

Frame.Size = UDim2.new(0, 200, 0, 300)
Frame.Position = UDim2.new(0, 100, 0, 100)
Frame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
Frame.Parent = ScreenGui

Title.Size = UDim2.new(1, 0, 0, 30)
Title.Position = UDim2.new(0, 0, 0, 0)
Title.Text = "Dead Rails Hub"
Title.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
Title.TextColor3 = Color3.new(1, 1, 1)
Title.Parent = Frame

-- Função para criar botões
local function createButton(name, positionY)
    local button = Instance.new("TextButton")
    button.Size = UDim2.new(1, 0, 0, 40)
    button.Position = UDim2.new(0, 0, 0, positionY)
    button.Text = name
    button.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
    button.TextColor3 = Color3.new(1, 1, 1)
    button.Parent = Frame
    return button
end

-- Criar botões
KillAuraButton = createButton("Ativar Kill Aura", 40)
AutoFarmButton = createButton("Ativar Auto Farm", 90)
AutoWinButton = createButton("Ativar Auto Win", 140)
TeleportButton = createButton("Ativar Teleport", 190)
FlyButton = createButton("Ativar Fly", 240)
ESPButton = createButton("Ativar ESP", 290)

-- Variáveis de controle
local killAuraAtivo = false
local autoFarmAtivo = false
local autoWinAtivo = false
local teleportAtivo = false
local flyAtivo = false
local espAtivo = false

-- Funções dos botões
KillAuraButton.MouseButton1Click:Connect(function()
    killAuraAtivo = not killAuraAtivo
    KillAuraButton.Text = killAuraAtivo and "Desativar Kill Aura" or "Ativar Kill Aura"
    if killAuraAtivo then
        -- Código para ativar Kill Aura
        -- Exemplo: loadstring(game:HttpGet("URL_DO_SCRIPT_KILL_AURA"))()
    else
        -- Código para desativar Kill Aura
    end
end)

