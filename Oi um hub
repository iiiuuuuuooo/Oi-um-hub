-- Lógica para pegar o Pet
PetButton.MouseButton1Click:Connect(function()
	local tipo = string.upper(PetInput.Text or "")
	local nome = NomeInput.Text or ""

	if petsValidos[tipo] and nomesValidos[nome] then
		local petFolder = ReplicatedStorage:FindFirstChild("Pets")
		if petFolder then
			local modelo = petFolder:FindFirstChild(tipo)
			if modelo then
				local pet = modelo:Clone()
				pet.Name = nome
				pet.Parent = player.Backpack
			else
				warn("Modelo de pet não encontrado no ReplicatedStorage.")
			end
		end
	else
		warn("Pet ou nome inválido.")
	end
end)
