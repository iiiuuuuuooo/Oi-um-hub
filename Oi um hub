-- Criar GUI simples
local ScreenGui = Instance.new("ScreenGui")
local Frame = Instance.new("Frame")
local KillAuraButton = Instance.new("TextButton")

ScreenGui.Parent = game.CoreGui
ScreenGui.Name = "ScriptHub"

Frame.Size = UDim2.new(0, 200, 0, 100)
Frame.Position = UDim2.new(0, 100, 0, 100)
Frame.BackgroundColor3 = Color3.new(0.1, 0.1, 0.1)
Frame.Parent = ScreenGui

KillAuraButton.Size = UDim2.new(1, 0, 0, 50)
KillAuraButton.Position = UDim2.new(0, 0, 0, 25)
KillAuraButton.Text = "Ativar Kill Aura"
KillAuraButton.BackgroundColor3 = Color3.new(0.2, 0.2, 0.2)
KillAuraButton.TextColor3 = Color3.new(1, 1, 1)
KillAuraButton.Parent = Frame

-- Kill Aura Script
local killAuraAtivo = false

KillAuraButton.MouseButton1Click:Connect(function()
    killAuraAtivo = not killAuraAtivo
    KillAuraButton.Text = killAuraAtivo and "Desativar Kill Aura" or "Ativar Kill Aura"

    if killAuraAtivo then
        spawn(function()
            while killAuraAtivo do
                local player = game.Players.LocalPlayer
                local char = player.Character
                if char and char:FindFirstChild("HumanoidRootPart") then
                    for _, v in pairs(workspace:GetDescendants()) do
                        if v:IsA("Model") and v ~= char and v:FindFirstChild("Humanoid") and v:FindFirstChild("HumanoidRootPart") then
                            local distance = (char.HumanoidRootPart.Position - v.HumanoidRootPart.Position).Magnitude
                            if distance < 20 then -- raio da kill aura
                                v.Humanoid.Health = 0
                            end
                        end
                    end
                end
                wait(0.5)
            end
        end)
    end
end)
